<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google-signin-client_id" content="YOUR_CLIENT_ID.apps.googleusercontent.com">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/style.css">
    <link href="https://fonts.googleapis.com/css?family=Dancing+Script&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Oxygen&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Abril+Fatface&display=swap" rel="stylesheet">
    <title>Document</title>
</head>

<body>
    <div class="top_div">
        <div class="top_left">SAC NIT PATNA</div>
        <div class="write_blogs" onclick="document.getElementById('id03').style.display='block'">Write Blogs</div>
    </div>
    <div class="main_div1">
        <div class="div_dis">HOME</div>
        <div class="div_dis">SAS COUNCIL 2019</div>
        <div class="div_dis">NITP CLUBS</div>
        <div class="div_dis">ABOUT SAC</div>
        <div class="div_dis">NITP MAP</div>
        <div class="div_dis">ABOUT SAC</div>
        <div class="div_dis">ABOUT SAC</div>
    </div>
    <div class="main_div2">
        <div class="signindiv card-1" id="text1" onclick="signinclicked()" style="cursor: pointer;">
            <%= buttontext %></div>

        <script>
            function signinclicked() {
                var text = document.getElementById("text1").textContent;
                var text1="SIGNIN";
               if (text.trim() === text1.trim()) {
                    document.getElementById('id01').style.display = 'block';
                } else {
                    window.location.href = '/logout';
                }
            }
        </script>

        <div class="blogs">
            <% for(var i=0;i<bloghead.length;i++){ %>
            <div class="blog_div">
                <img src="<%= blogimg[i] %>" alt="Logo" class="imgclass1">
                <div class="bloghead"><%= bloghead[i] %></div>
                <div class="personname"><%= personname1[i] %></div>
                <hr class="line">
                <div class="blogcontent"><%= blogs[i] %>
                </div>
            </div>
            <% } %>
        </div>
        <div class="events_div">
            <div style="background-color: black; font-size: 25px; color: beige; text-align: center;">SAC NOTICE BOARD
            </div>
            <div class="eventcont">
                <% for(var i=0;i<Pname.length;i++){ %>
                <div class="eventsdiv">
                    <div class="eventname"><%= Pname[i] %></div>
                    <hr class="line1">
                    <div class="eventsdis">
                        <%= eventdis[i] %>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
        <div class="footer"></div>
    </div>

    <!-- loginform -->

    <div id="id01" class="modal1">

        <div class="modal-content1 animate1">
            <div class="imgcontainer1">
                <span onclick="document.getElementById('id01').style.display='none'" class="close"
                    title="Close1 Modal1">&times;</span>
                <img src="Images/SacLogo.jpg" alt="Logo" class="avatar1">
            </div>
            <div class="container1" style="align-items: center;">
                <form action="/login" method="POST">
                    <label for="uname"><b>Username</b></label>
                    <input type="text" placeholder="Enter Username" name="username" required>

                    <label for="psw"><b>Password</b></label>
                    <input type="password" placeholder="Enter Password" name="password" required>

                    <button type="submit">Login</button>
                </form>
                <div style="font-size: 20px; color: rgb(150, 120, 120); text-align: center;">Or</div>
                <hr class="login_hr">
                <!-- Google -->
                <!-- <a href="/auth/google" style="text-decoration: none;" target="_self">
                    <div id="my-signin2"></div>
                </a> -->
                <a href="/auth/google" target="_parent">google</a>
            </div>

            <div class="container1" style="background-color:#f1f1f1">
                <button type="button" onclick="document.getElementById('id01').style.display='none'"
                    class="cancelbtn1">Cancel</button>
                <span class="psw1">No Account?<span class="signup1" onclick="document.getElementById('id02').style.display='block'
                document.getElementById('id01').style.display='none'">SignUp</span></span>
            </div>
        </div>
    </div>
    <!-- loginEnds -->

    <!-- SignUpStarts -->

    <div id="id02" class="modal1">
        <span onclick="document.getElementById('id02').style.display='none'" class="close"
            title="Close Modal">&times;</span>
        <div class="modal-content">
            <div class="container">
                <div>
                    <h1>Sign Up</h1>
                    <p>Please fill in this form to create an account.</p>
                    <hr>
                </div>
                <form action="/signup" method="POST">
                    <label for="email"><b>Email</b></label>
                    <input type="text" placeholder="Enter Email" name="username" required>

                    <label for="psw"><b>Password</b></label>
                    <input type="password" placeholder="Enter Password" name="password" required>
                    <div class="clearfix">
                        <button type="button" onclick="document.getElementById('id02').style.display='none'"
                            class="cancelbtn">Cancel</button>
                        <button type="submit" class="signupbtn">Sign Up</button>
                    </div>
                </form>
                <div style="font-size: 20px; color: rgb(150, 120, 120); text-align: center;">Or</div>
                <hr class="login_hr">
                <a href="/auth/google" style="text-decoration: none;">
                    <div class="g-signin2" data-width="250" data-height="50" data-longtitle="true"></div>
                </a>
            </div>

        </div>
    </div>
    <!-- sign up ends -->

    <!-- Blogs write -->
    <div id="id03" class="modal1">
        <span onclick="document.getElementById('id03').style.display='none'" class="close3"
            title="Close Modal">&times;</span>
        <div class="modal-content3 animate1">
            <div class="container3">
                <form action="/writeBlog" method="POST">
                    <h1>BLOGS</h1>
                    <div>
                        <img src="<%= proimgsrc %>" alt="UserImage" class="imgclass">
                        <h2 class="h2name"><%= personname %></h2>
                    </div>
                    <p>Write your blog here...</p>
                    <hr>
                    <textarea name="posttitle" class="area" cols="50" rows="1" placeholder="heading"></textarea>
                    <textarea name="post" class="area" cols="50" rows="10"></textarea>
                    <div class="clearfix">
                        <button type="button" onclick="document.getElementById('id03').style.display='none'"
                            class="cancelbtn3">Cancel</button>
                        <button type="submit" class="signupbtn3">Post</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
    <!-- Blogs ends -->
    <script>
        // Get the modal
        var modal2 = document.getElementById('id02');
        var modal3 = document.getElementById('id01');
        var modal4 = document.getElementById('id03');
        // When the user clicks anywhere outside of the modal, close it
        window.onclick = function (event) {
            if (event.target == modal2) {
                modal2.style.display = "none";
            }
            if (event.target == modal3) {
                modal3.style.display = "none";
            }
            if (event.target == modal4) {
                modal4.style.display = "none";
            }
        }

        //google

        function onSuccess(googleUser) {
            console.log('Logged in as: ' + googleUser.getBasicProfile().getName());
        }

        function onFailure(error) {
            console.log(error);
        }

        function renderButton() {
            gapi.signin2.render('my-signin2', {
                'scope': 'profile email',
                'width': 240,
                'height': 50,
                'margin-left': 200,
                'longtitle': true,
                'theme': 'dark',
                'onsuccess': onSuccess,
                'onfailure': onFailure
            });
        }

        //google ends
    </script>
    <script src="https://apis.google.com/js/platform.js?onload=renderButton" async defer></script>
    <!-- SignupEnds -->
</body>

</html>